<local:PropertyEditor x:Class="SW_Utils.EditorMaterial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW_Utils"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" VerticalAlignment="Center" x:Name="txtLabel" Text="Material"/>
        <TreeView Grid.Column="1" Margin="0,1,0,1" x:Name="trvMaterials" LostFocus="trvMaterials_LostFocus">
            <TreeViewItem x:Name="headerItem" Expanded="headerItem_Expanded">
                
            </TreeViewItem>
        </TreeView>
        <!--<ComboBox Grid.Column="1" Margin="0,1,0,1"  VerticalContentAlignment="Center" x:Name="cmbValue"/>-->
    </Grid>
</local:PropertyEditor>
