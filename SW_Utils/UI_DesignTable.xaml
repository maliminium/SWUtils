<UserControl x:Class="SW_Utils.UI_DesignTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW_Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <StackPanel>
        <Button Content="UPDATE &amp; OPEN" Name="btnUpdateAndOpen" Click="btnUpdateAndOpen_Click"/>
        <CheckBox Margin="0,5,0,0" HorizontalAlignment="Center" Content="Open in new window" x:Name="cbOpenInNewWindow" IsChecked="False"/>
        <!--<Button Content="Check for New Parameters" Name="btnCheck" Click="btnCheck_Click"/>
        <CheckBox Content="Add parameters to table" x:Name="cbAddNewParams" IsChecked="True" IsEnabled="False"/>-->
        <Button Content="GET CONF" Name="btnOpen" Click="btnOpen_Click"/>
        <TextBlock x:Name="txtParams"/>
    </StackPanel>
</UserControl>
