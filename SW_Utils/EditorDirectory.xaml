<local:PropertyEditor x:Class="SW_Utils.EditorDirectory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW_Utils"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" MinWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Directory"/>
        <TextBox Grid.Column="1" Margin="0,1,0,1"  VerticalContentAlignment="Center" x:Name="txtValue" Text=" " GotFocus="txtValue_GotFocus" LostFocus="txtValue_LostFocus" PreviewKeyDown="txtValue_PreviewKeyDown"/>
        <Button Grid.Column="2" x:Name="btnBrowse" Margin="1,1,0,1" FontFamily="Wingdings 1" Content="1" Click="btnBrowse_Click"/>
    </Grid>
</local:PropertyEditor>
